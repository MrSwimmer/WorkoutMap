<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/forgetmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите ваш адрес электронной почты"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/bath"
        android:textSize="14sp"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/forgetmail"
        android:layout_alignStart="@+id/forgetmail"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/forgetmail"
        android:layout_alignStart="@+id/forgetmail"
        android:layout_below="@+id/forgetmail"
        android:layout_marginTop="7dp"
        android:background="@android:color/holo_purple"
        android:onClick="resetPass"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Отправить"
        android:textColor="@color/common_google_signin_btn_text_dark_default"/>
</RelativeLayout>
